<div class="container">
  <p id="notice"><%= notice %></p>

  <div class="index-heading">
    <h1>Cocktails</h1>
    <div>
      <%= link_to new_cocktail_path, class: 'btn btn-primary' do %>
        <i class="fas fa-plus"></i> Add Cocktail
      <% end %>
    </div>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @cocktails.each do |cocktail| %>
        <tr>
          <td><%= link_to cocktail.name, cocktail, class: 'table-column-one' %></td>
          <td>
            <%= link_to new_cocktail_dose_path(cocktail) do %>
              <i class="fas fa-plus"></i> Add Ingredient
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
