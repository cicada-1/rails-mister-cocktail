<div class="container">
  <h1><%= @cocktail.name %></h1>

  <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>

  <h2>
    Ingredients
    <%= link_to new_cocktail_dose_path(@cocktail), class: 'btn btn-primary' do %>
      <i class="fas fa-plus"></i> Add Ingredient
    <% end %>
  </h2>

  <% @doses.each do |dose| %>
    <p>
      <%= dose.description %>
      <%= dose.ingredient.name %>
      <%= link_to doses_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="far fa-trash-alt"></i>
      <% end %>
    </p>
  <% end %>

  <%= link_to cocktails_path, class: 'btn btn-primary' do %>
    <i class="fas fa-undo-alt"></i> Back
  <% end %>
</div>
